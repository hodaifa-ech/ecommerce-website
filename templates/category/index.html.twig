{% extends 'base.html.twig' %}

{% block title %}category list
{% endblock %}

{% block body %}
	<div class="row my-5">
		<div class="col-md-10 mx-auto">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{message}}
				</div>
			{% endfor %}
			<div class="card">
				<div class="card-header d-flex justify-content-between align-item-center">
					<span>List of category</span>
					<a href="{{path('create_category')}}" class="btn btn-sm btn-primary">Add</a>
				</div>
			</div>
			<div class="card-body ">
				<table class="table table-bordered table-hover ">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody class="text-align--center">
						{% for category in categorys %}
							<tr>
								<td>{{loop.index}}</td>
								<td>{{category.name}}</td>

								<td class="d-flex justify-content-around align-items-center">

									<a href="{{path('category_edit',{id:category.id})}}" class="btn btn-sm btn-warning">edit</a>
									<form id="{{category.id}}" action="{{path('category_delete',{id:category.id})}}" method="post"></form>
									<button onclick="deleteItem('{{category.id}}')" class="btn btn-sm btn-danger">delete</button>

								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
